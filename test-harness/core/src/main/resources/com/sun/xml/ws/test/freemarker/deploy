#!/bin/bash -ex
# service id: ${serviceId}
# stage: ${stage}
if [ "$G_STATUS" = "1" ]; then
    return 1
fi;

export CTX=${serviceId}:${stage}-deploy

. shared

prolog $CTX

mkdirp services/server/war/WEB-INF/wsdl/

cpwsdl '../src/server/*.wsdl'
cpwsdl '../src/server/*.xsd'

r javac -cp ${classpath} bsh/Deploy${stage}.java

runjavabg \
    .:${classpath} \
    bsh.Deploy${stage}

r sleep 3